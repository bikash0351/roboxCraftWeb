rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read for product, blog, and course images
    match /products/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    match /blogs/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    match /courses/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Allow public read for reel videos and thumbnails
    match /reels/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Allow users to read and write their own profile pictures
    match /profile-images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
