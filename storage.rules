rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow admins to write to the 'blogs' and 'courses' directories.
    match /blogs/{allPaths=**} {
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    match /courses/{allPaths=**} {
      allow write: if request.auth != null && exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Allow authenticated users to write to their own profile image path.
    match /profile-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
